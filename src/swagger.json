{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Full Of Projects",
    "description": "My User Project Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:4000",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "paths":{
    "/api/projects/add": {
      "post": {
        "tags": ["projects"],
        "description": "Create new project in app",
        "parameters": [
          {
            "name": "name",
            "in": "body",
            "description": "nombre del proyecto"
          },
          {
            "name": "slogan",
            "in": "body",
            "description": "eslogan del proyecto"
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
              "success": true,
              "cardURL": "http://localhost:4000/api/projects/detail/${results.insertId}"
            }
        }
      }
    },
    "/users": {
      "get": {
        "tags": ["Users"],
        "summary": "Get all users in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Users"
            }
          }
        }
      }
    }
  },
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"]
}